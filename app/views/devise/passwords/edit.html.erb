<h2>Cambia o contrasinal</h2>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, :as => :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="inputs">
    <%= f.input :password, :label => "Novo contrasinal", :required => true %>
    <%= f.input :password_confirmation, :label => "Confirma o contrasinal", :required => true %>
  </div>

  <div class="actions">
    <%= f.button :submit, "Cambiar" , :class=>'btn btn-success'%>
  </div>
<% end %>

<%= render "links" %>