.container
  .row
    .span8
      .well
        %br
        %h4 Vídeo resumo da aplicación
        <br/>
        %br
        <iframe width="560" height="315" src="http://www.youtube.com/embed/Mr5ksoCvk3Q" frameborder="0" allowfullscreen></iframe>
        %br
        %br

    .span4
      .row
        .span4
          .well
            %h4= t('page_index.title_sign_in')+' '+t('page_index.single_farmer')
            = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
              .inputs
                = f.text_field :email, :required => false, :autofocus => true, :placeholder => t('session.email') 
                = f.text_field :password, :required => false, :placeholder => t('session.password')
              .actions
                = f.button :submit, t('session.btn_aceptar') , :class=>'btn btn-success'
            = render "links"
        .span4
          .well
            %h4= t('benefit.title')
            %ul{:style=>"list-style-type:none"}
              %li
                =image_tag 'verify.jpg',:size=>"20x20"
                =t('benefit.ben_1')
              %li
                =image_tag 'verify.jpg',:size=>"20x20"
                =t('benefit.ben_2')
              %li
                =image_tag 'verify.jpg',:size=>"20x20"
                =t('benefit.ben_3')
              %li
                =image_tag 'verify.jpg',:size=>"20x20"
                =t('benefit.ben_4')

  .row
    .span12
      .well
        .row
          .span2
            = link_to image_tag("followfb.jpg", :size=>"120x40"), 'http://www.facebook.com/pages/Xegra/310421919085522', :target=>"_blank"
          .span7
            <iframe src="//www.facebook.com/plugins/likebox.php?href=http%3A%2F%2Fwww.facebook.com%2Fpages%2FXegra%2F310421919085522&amp;width=202&amp;height=62&amp;show_faces=false&amp;colorscheme=light&amp;stream=false&amp;border_color&amp;header=false" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:202px; height:62px;" allowTransparency="true"></iframe>