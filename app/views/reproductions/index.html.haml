.container
  .row
    .span12
      .well
        .row
          .span9
            %h2 CARTA DE REPRODUCCIÓN
        .row
          %table.table.table-bordered.table-striped
            %thead
              %tr
                %th Vaca
                %th Xaneiro
                %th Febreiro
                %th Marzo
                %th Abril
                %th Maio
                %th Xuño
                %th Xullo
                %th Agosto
                %th Setembro
                %th Outubro
                %th Novembro
                %th Decembro
                %th
                
                - @cows.each do |cow|
                  %tr
                    %td
                      = link_to (cow.ring+'<br />'+cow.name).html_safe, proba_path(cow.id)
                    - repro = get_simbol_reproduction(@reproductions, cow.id)
                    - if !repro.nil?
                      - repro.each do |r|
                        %td
                          - if r != {}
                            = r
                    