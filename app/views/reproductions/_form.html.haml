= form_for @reproduction do |f|
  - if @reproduction.errors.any?
    #error_explanation
      %h2= "#{pluralize(@reproduction.errors.count, "error")} prohibited this reproduction from being saved:"
      %ul
        - @reproduction.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :year
    = f.number_field :year
  .field
    = f.label :month
    = f.number_field :month
  .field
    = f.label :comment
    = f.text_field :comment
  .actions
    = f.submit 'Save'
